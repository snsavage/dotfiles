[alias]
	l = "!. ~/.githelpers && pretty_git_log"
	co = checkout

[core]
	editor = vim
	excludesFile = ~/.gitignore
	pager = less -F -X

[include]
    path = ~/.gitconfig_local

[init]
	defaultBranch = main
[url "git@github.com:"]
	insteadof = https://github.com/
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
