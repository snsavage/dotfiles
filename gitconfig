[alias]
l = "!. ~/.githelpers && pretty_git_log"
co = checkout

[core]
editor = vim
excludesFile = ~/.gitignore
pager = less -F -X

[include]
path = ~/.gitconfig_local

[init]
defaultBranch = main

[url "ssh://git@github.com/"]
insteadOf = https://github.com/

[filter "lfs"]
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process
required = true
[safe]
	directory = /todo
